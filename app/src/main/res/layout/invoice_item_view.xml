<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_18dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rent It Invoice"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Title"/>
                            <TextView
                                android:id="@+id/ivtitleTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Invoice Number"/>
                            <TextView
                                android:id="@+id/ivnumberTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Category"/>
                            <TextView
                                android:id="@+id/ivcategoryTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Rented From"/>
                            <TextView
                                android:id="@+id/ivrFromTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Rented By"/>
                            <TextView
                                android:id="@+id/ivrbyTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Currency Type"/>
                            <TextView
                                android:id="@+id/ivcurrencytypeTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Price For Day"/>
                            <TextView
                                android:id="@+id/ivpricefordayTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Price For Week "/>
                            <TextView
                                android:id="@+id/ivpriceforweekTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Quantity"/>
                            <TextView
                                android:id="@+id/ivquantityTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Start Date"/>
                            <TextView
                                android:id="@+id/ivstartDateTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="End Date"/>
                            <TextView
                                android:id="@+id/ivendDateTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Security Amount"/>
                            <TextView
                                android:id="@+id/ivsecurityAmountTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Total Rent"/>
                            <TextView
                                android:id="@+id/ivtotalrentTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Item Status"/>
                            <TextView
                                android:id="@+id/ivitemStatusText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Contact Rent It"/>
                            <TextView
                                android:id="@+id/ivcontactRentitTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Title Text"
                                android:gravity="center"
                                android:layout_weight="1.5"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/blue">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20dp">
                            <TextView
                                android:id="@+id/ivshareTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textColor="@color/blue"
                                android:textSize="18sp"
                                android:text="Share Invoice"/>
                            <TextView
                                android:id="@+id/ivprintTxt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Print Invoice"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/_18sp"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>