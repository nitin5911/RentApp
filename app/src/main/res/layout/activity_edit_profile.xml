<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context="com.example.chetanp.rentitapp.UserInterface.EditProfile">
    <ImageView
        android:id="@+id/profile_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_white_24dp"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:id="@+id/profile_card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_back_image"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10dp"
        android:orientation="vertical"
        >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/epImage"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:background="@drawable/ic_launcher_background"
                    android:layout_margin="@dimen/_20dp"/>
                <TextView
                    android:id="@+id/epAddimageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Profile Picture"
                    android:layout_margin="@dimen/_6dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:layout_margin="@dimen/_6dp"
                    android:gravity="start"
                    android:textColor="@color/blue"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/editProfile_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epNameEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:padding="@dimen/_6dp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_profile_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epMobileEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawableStart="@mipmap/name"
                        android:drawablePadding="@dimen/_10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_profile_gender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epGenderEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_profile_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epAddressEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="District"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epDistrictEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:textColorHint="@color/blue">

                    <EditText
                        android:id="@+id/epPincodeEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:backgroundTint="@color/blue"
                        android:drawablePadding="@dimen/_10dp"
                        android:drawableStart="@mipmap/name"
                        android:hint="First Name"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_16sp"
                        android:drawableLeft="@mipmap/name" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/epSaveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:text="Save"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_20dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

    </ScrollView>


    </LinearLayout>

</RelativeLayout>
