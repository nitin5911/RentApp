<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/faImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/sport_bike"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/_6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/fatitleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Brand New Sport Bike"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/blue"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp">
                        <TextView
                            android:id="@+id/faweekTxt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Week Rent:"
                            android:textStyle="bold"
                            android:textSize="@dimen/_20sp"
                            android:layout_weight=".5"
                            android:textColor="@color/colorPrimaryDark"/>
                        <TextView
                            android:id="@+id/fapriceTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5000-/"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_20dp">
                            <ImageView
                                android:id="@+id/fafavouriteImg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/heart"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>