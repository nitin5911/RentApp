<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/sinskiptxtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip Login"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:gravity="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginlogoid" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/loginlogoid"
        android:src="@drawable/rent_it_logo"
        app:layout_constraintRight_toRightOf="@+id/sinskiptxtid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinskiptxtid"
        app:layout_constraintBottom_toTopOf="@+id/logincardviewid" />
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/logincardviewid"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginlogoid">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:text="LOGIN"
            android:id="@+id/logintextid"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textemailid"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textemailid"
            android:hint="   Enter your Email"
            android:textColorHint="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logintextid"
            app:layout_constraintBottom_toTopOf="@+id/textpassid">
            <EditText
                android:id="@+id/sinuserEtxtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:drawableStart="@mipmap/email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/blue"
                android:textSize="@dimen/_16sp"
                android:drawableLeft="@mipmap/email" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Enter Password"
            android:id="@+id/textpassid"
            android:textColorHint="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textemailid"
            app:layout_constraintBottom_toTopOf="@+id/sinloginBtnid">
            <EditText
                android:id="@+id/sinpassEtxtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:drawableStart="@mipmap/password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_16sp"
                android:drawableLeft="@mipmap/password" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/sinloginBtnid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textpassid"
            app:layout_constraintBottom_toTopOf="@+id/sinfbbtnid"/>
            <Button
                android:id="@+id/sinfbbtnid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:background="@mipmap/facebook"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinloginBtnid"
                app:layout_constraintBottom_toTopOf="@+id/signuptxtid"/>
            <TextView
                android:id="@+id/signuptxtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_margin="@dimen/_3dp"
                android:textAlignment="textStart"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintRight_toLeftOf="@+id/fogetpasstxtid"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinfbbtnid"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="start" />
            <TextView
                android:id="@+id/fogetpasstxtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_margin="@dimen/_3dp"
                android:textAlignment="textEnd"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/signuptxtid"
                app:layout_constraintTop_toBottomOf="@+id/sinfbbtnid"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="end" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>